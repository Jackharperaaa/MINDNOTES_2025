{
  "manifest_version": 3,
  "name": "Mind Notes",
  "description": "AI-powered productivity app with task management and level progression",
  "version": "1.0.0",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Mind Notes"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://openrouter.ai/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://openrouter.ai;"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.svg", "*.css", "*.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}